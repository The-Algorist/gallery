pipeline {
    agent any
    tools {
        nodejs "NodeJS"
    }
    
    stages {
        stage('Cloning the Git Gallery Repo') {
            steps {
                // Clone the GitHub Repository
                git "https://github.com/The-Algorist/gallery"
            }
        }
        
        stage('Install Dependencies') {
            steps {
                // Run npm install to install project dependencies
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                // Run npm tests to run the tests defined
                sh 'npm test'
            }
        }
    }

    post {
        success {
            slackSend(
                baseUrl:'https://app.slack.com/client/T05SQ8U89A6/C05SHKH8Y2J',
                channel: "#gideonwarui_ip1", color: "good", 
                message: "Build Succeeded for ${currentBuild.fullDisplayName}",
                tokenCredentialId: 'X4dQ7YnvcWEbwzwp1weAjYI3'
                )
        }
        failure {
            script {
                currentBuild.result = 'FAILURE'
            }
            emailext subject: "Test Failed for ${currentBuild.fullDisplayName}",
                body: "The test stage failed. Please investigate.",
                to: 'waruigwanjiru@gmail.com'
            slackSend(
                baseUrl:'https://app.slack.com/client/T05SQ8U89A6/C05SHKH8Y2J',
                channel: "#gideonwarui_ip1", color: "danger", 
                message: "Build Failed for ${currentBuild.fullDisplayName} - Please investigate.",
                tokenCredentialId: 'X4dQ7YnvcWEbwzwp1weAjYI3'
                )
        }
    }
}
